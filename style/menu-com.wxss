/* 菜单页弹屏框 */
.com-fly {
  background-color: #fff;
  height: 1040rpx;
  width: 100%;
  box-sizing:border-box;
  position: relative;
}

.scroll-box {
  height: 100%;
  width: 100%;
}

.top-img {
  display: none;
}

.combo-name {
  font-size: 48rpx;
}

.combo-price {
  font-size: 38rpx;
  color: #e2973b;
  margin-bottom: 30rpx;
}

.tips {
  font-size: 24rpx;
  margin-bottom: 15rpx;
}

.top-desc {
  height: 298rpx;
  background-color: #c8102e;
  padding: 30rpx 42rpx;
  color: #fff;
}

.close {
  position: absolute;
  top: 29rpx;
  right: 29rpx;
  height: 59rpx;
  width: 59rpx;
  color: #fff;
}

.little-cart {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
	height: 108rpx;
	background-color: #542d2e;
}

.opcity {
  opacity: 0.4;
}

/* 弹屏小车 开始 */
.cart-left {
  width: 375rpx;
  padding-left: 43rpx;
  color: #fff;
}

.cart-num {
  padding: 0 33rpx;
}

.com-icon {
  width: 64rpx;
  height: 64rpx;
}

.cart-right {
  border-left: 1px solid rgba(255, 255, 255, 0.1);
  height: 60rpx;
  width: 375rpx;
  font-size: 48rpx;
  color: #fff;
  text-align: center;
  line-height: 60rpx;
}
/* 弹屏小车 结束 */
