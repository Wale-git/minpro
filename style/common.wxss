/* ------------loading------------ */
.page-loading {
  display: flex;
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, .2);
  align-items: center;
  justify-content: center;
  z-index: 10001;
}
.ball-scale-ripple-multiple {
  position: relative;
  -webkit-transform: translateY(-50rpx);
  -ms-transform: translateY(-50rpx);
  transform: translateY(-50rpx);
  width: 100rpx;
  height: 100rpx;
}
@-webkit-keyframes ball-scale-ripple-multiple {
  0% {
    -webkit-transform: scale(0.1);
    transform: scale(0.1);
    opacity: 1;
  }

  70% {
    -webkit-transform: scale(1);
    transform: scale(1);
    opacity: 0.7;
  }

  100% {
    opacity: 0.0;
  }
}
@keyframes ball-scale-ripple-multiple {
  0% {
    -webkit-transform: scale(0.1);
    transform: scale(0.1);
    opacity: 1;
  }

  70% {
    -webkit-transform: scale(1);
    transform: scale(1);
    opacity: 0.7;
  }

  100% {
    opacity: 0.0;
  }
}
.ball-scale-ripple-multiple>view:nth-child(0) {
  -webkit-animation-delay: -0.2s;
  animation-delay: -0.2s;
}
.ball-scale-ripple-multiple>view:nth-child(1) {
  -webkit-animation-delay: 0s;
  animation-delay: 0s;
}
.ball-scale-ripple-multiple>view:nth-child(2) {
  -webkit-animation-delay: 0.2s;
  animation-delay: 0.2s;
}
.ball-scale-ripple-multiple>view:nth-child(3) {
  -webkit-animation-delay: 0.4s;
  animation-delay: 0.4s;
}
.ball-scale-ripple-multiple>view {
  position: absolute;
  top: 0;
  left: 0;
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
  border: 4rpx solid #fff;
  animation: ball-scale-ripple-multiple 1.25s 0s infinite cubic-bezier(.21, .53, .56, .8);
}
/* ------------loading end------------ */


