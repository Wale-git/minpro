/* flex end */

.container {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: rgba(85, 45, 45, .6);
  z-index: 10;
  display: flex;
  align-items: center;
  justify-content: center;
}
.content {
  width: 685rpx;
  min-height: 200rpx;
  background-color: #ffffff;
  border-radius: 6rpx;
  overflow: hidden;
}
.title {
  margin: 21rpx 32rpx 0;
  padding-bottom: 22rpx;
  position: relative;
  height: 59rpx;
  line-height: 59rpx;
  color: #552d2d;
  font-size: 39rpx;
  font-weight: bold;
  border-bottom: 2rpx solid #a99696;
}
.title .img {
  width: 59rpx;
  height: 59rpx;
  position: absolute;
  top: 0;
  right: 0;
}

.product-list {
  display: flex;
  max-height: 640rpx;
}
.product-item {
  display: inline-flex;
  margin: 14rpx 0 10rpx 32rpx;
  width: 295rpx;
  height: 120rpx;
  box-sizing: border-box;
  border: 1rpx solid #ccc0c0;
  overflow: hidden;
  color: #552d2d;
}
.product-item.selected {
  border: 1rpx solid #c8102e;
  background-color: #c8102e;
  color: #ffffff;
}
.product-img {
  width: 100rpx;
  height: auto;
  background: #ffffff;
  overflow: hidden;
}
.product-img .img {
  width: 100rpx;
  height: 100%;
}
.product-name {
  padding:15rpx 0 0 16rpx;
  font-size: 23rpx;
}
.product-price {
  padding:0 0 12rpx 19rpx;
  font-size: 25rpx;
  color: #e2973b;
  font-weight: 700;
}
.yuanj {
  color:rgb(158, 158, 158);
  text-decoration: line-through;
  font-size: 20rpx;
  margin-left: 6rpx;
}
.more {
  height: 68rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.more .img {
  width: 52rpx;
  height: 28rpx;
}
.btn {
  height: 108rpx;
  line-height: 108rpx;
  text-align: center;
  color: #ffffff;
  font-size: 45rpx;
  background-color: #c8102e;
  letter-spacing: 4rpx;
  border-radius: 0px;
}