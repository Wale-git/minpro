/* pages/orderdetail/orderdetail.wxss */
.container {
  width: 100%;
  height: 100%;
  position: relative;
}
.content-view {
  height: calc(100% - 90rpx);
}

.content-box {
  padding: 32rpx;
  box-sizing: border-box;
  min-height: 100%;
}
.content {
  margin: 0 32rpx;
  padding: 30rpx;
  position: relative;
  min-height: calc(100% - 64rpx);
  border: 2rpx solid #552d2d;
  border-radius: 6rpx;
  box-sizing: border-box;
  color: #542d2e;
  font-size: 27rpx;
}
.order-time {
  color: #c8102e;
  font-size: 24rpx;
  font-weight: 700;
  height: 50rpx;
}
.order-status {
  font-size: 28rpx;
}
.order-info {
  height: 50rpx;
}
.order-info .fp {
  font-weight: 600;
  box-shadow: 4rpx 4rpx 2rpx #888888;
  background-color: #542d2e;
  padding: 6rpx;
  color: #fff;
}
.order-line {
  border-top: 2rpx solid #a99696;
  height: 20rpx;
  position: relative;
}
.order-line .stamp {
  position: absolute;
  top: -40rpx;
  right: 48rpx;
  width: 307rpx;
  height: 307rpx;
}
.order-product-title {
  font-weight: 700;
  height: 50rpx;
  color: #a99696;
}
.order-item {
  height: 50rpx;
  line-height: 50rpx;
}
.order-item-details {
  text-indent: 10rpx;
  font-size: 22rpx;
  height: auto;
  line-height: 30rpx;
}
.order-num {
  width: 80rpx;
  text-align: center;
}
.order-price {
  width: 150rpx;
  text-align: right;
}

.order-total, .order-pay {
  height: 66rpx;
  font-weight: 700;
  text-align: right;
  font-size: 39rpx;
}
.order-pay {
  height: 220rpx;
}

.space {
  height: 32rpx;
}

.btn {
 height: 90rpx;
 line-height: 90rpx;
 text-align: center;
 background-color: #c8102e;
 color: #ffffff;
 font-size: 37rpx;
 letter-spacing: 6rpx;
}

.to-home {
  position: absolute;
  top: 3%;
  right: 5%;
  width: 168rpx;
  height: 70rpx;
  background-color: #c8102e;
  color: #fff;
  z-index: 2;
}

.to-home text {
  font-size: 24rpx;
}

.to-home image {
  margin-left: 10rpx;
  height: 44rpx;
  width: 51rpx;
}