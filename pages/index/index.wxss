.container {
  display: flex;
  width: 100%;
  height: 100%;
  font-size: 26rpx;
  padding: 0;
  margin: 0;
}
.main {
  position: relative;
}
.main .bg {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 1;
}
.main .logo {
  position: absolute;
  left: 50%;
  top: 60%;
  margin-left: -213rpx;  
  margin-top: -432rpx;
  width: 426rpx;
  height: 412rpx;
  z-index: 2;
}
.main .header {
  position: relative;
  z-index: 3;
  color: #c8102e;
}
.info-box {
  margin: 24rpx 30rpx 0 0;
  height: 54rpx;
  line-height: 54rpx;
  font-size: 32rpx;
  text-align:right;
}
.info-box view {
  display: inline-block;
  position: relative;
  padding:0 50rpx 0 5rpx;
  border-bottom: 2rpx solid #c8102e;
}
.info-box .person {
  position: absolute;
  top: 14rpx;
  right: 5rpx;
  width: 31rpx;
  height: 31rpx;
}
.title {
  margin-top: 35rpx;
  height: 57rpx;
  line-height: 57rpx;
  font-size: 57rpx;
  text-align: center;
}

.little-title {
  margin-top: 10rpx;
  text-align: center;
}

.nav {
 height: 108rpx;
 line-height: 108rpx;
 text-align: center;
 background-color: #c8102e;
 color: #ffffff;
 font-size: 45rpx;
 align-items: center;
}
.line {
  height: 60rpx;
  width: 1rpx;
  background-color: #e48897;
}

.auth {
  z-index: 200;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0);
}

.goRegister {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, .4);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.reconfirm-bd {
  font-size: 38rpx;
  color: #000;
  /* font-weight: bold; */
  word-break: break-all;
  flex: 1;
  line-height: 120rpx;
  /* padding: 94rpx 0 145rpx 0; */
  padding-top: 60rpx;
  text-align: center;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
}

.reconfirm-text {
  font-size: 50rpx;
  padding-top: 36rpx;
  padding-bottom: 82rpx;
}

.reconfirm-ft {
  color: #FFF;
  height: 120rpx;
  line-height: 120rpx;
  font-size: 32rpx;
  border-radius: 0 0 12rpx 12rpx;
  position: relative;
  display: flex;
  /* justify-content: center; */
  background-color: #fff;
  padding-bottom: 50rpx;
}

.reconfirm-btn {
  width: 50%;
  position: relative;
  text-align: center;
  display: block;
  padding: 0 2rpx;
  line-height: 92rpx;
  height: 92rpx;
  font-size: 36rpx;
  /* border-radius: 10rpx; */
  box-sizing: content-box;
  color: #c8102e;
  background-color: #e3e3e3;
  margin: 10rpx 50rpx;
  border-radius: 20rpx;
  font-weight: 600
}

.cut-off {
  background-color: #c8102e;
  color: #fff;
}

.re-confirm {
  width: 100%;
  min-height: 300rpx;
  background: #f9f9f9;
  font-size: 30rpx;
  animation: myconfirmshow .5s;
  display: flex;
  flex-direction: column;
  border-radius: 20rpx 20rpx 0 0;
  position: absolute;
  bottom: 0rpx;
}

.test {
  position: relative;
  height: 100%;
}

.btn{
  width: 20rpx;
  height: 20rpx;
  margin: 0;
  padding: 0;
  border-radius: 0;
  position: absolute;
  background: rgba(255,255,255,0);
  top: 0;
  right: 0;
  overflow: visible;
}
button::after{
  border:none;
}
.form-box{
  width: 360rpx;
  height: 200rpx;
  position:absolute;
  top: 0;
  right: 0;
  font-size:45rpx;
  color: #fff;
}