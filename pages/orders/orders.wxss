/* pages/orders/orders.wxss */
.container {
  width: 100%;
  height: 100%;
}
.order-item-area {
  padding: 0 32rpx 32rpx 32rpx;
}
.order-item-area:first-child {
  padding: 32rpx;
}
.order-item {
  border: 2rpx solid #552d2d;
  padding: 30rpx;
  box-sizing: border-box;
  border-radius: 6rpx;
  font-size: 27rpx;
}
.order-info {
  min-height: 45rpx;
  color: #542d2e;
}
.order-info .fp {
  font-weight: 600;
  box-shadow: 4rpx 4rpx 2rpx #888888;
  background-color: #542d2e;
  padding: 0rpx 10rpx 6rpx 10rpx;
  color: #fff;
  height: 32rpx;
}
.order-time {
  font-size: 22rpx;
  font-weight: 700;
  color: #c8102e;
}
.order-status {
  font-weight: 700;
  color: #c8102e;
}
.order-address {
  color: #aa9696;
}
.order-btn {
  border-top: 2rpx solid #aa9696;
  padding-top: 24rpx;
}
.order-btn-cancel {
  width: 170rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  border: 2rpx solid #542d2e;
  color: #542d2e;
  font-weight: 700;
  font-size: 30rpx;
  border-radius: 6rpx;
}
.order-btn-start {
  width: 310rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  border: 2rpx solid #c8102e;
  color: #ffffff;
  background-color: #c8102e;
  font-weight: 700;
  font-size: 30rpx;
  border-radius: 6rpx;
}

.order-btn-price {
  font-size: 30rpx;
  font-weight: 700;
  color: #542d2e;
}
.order-btn-info image {
  width: 40rpx;
  height: 40rpx;
}

.no-orders {
  height: 100%;
}

.to-home {
  position: absolute;
  bottom: 4%;
  right: 4%;
  width: 168rpx;
  height: 70rpx;
  background-color: #c8102e;
  color: #fff;
  z-index: 2;
}

.to-home text {
  font-size: 24rpx;
}

.to-home image {
  margin-left: 10rpx;
  height: 44rpx;
  width: 51rpx;
}